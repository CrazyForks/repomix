{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": false,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["chrome", "node"]
  },
  "include": [
    "entrypoints/**/*",
    "scripts/**/*",
    "tests/**/*",
    "wxt.config.ts",
    "types.d.ts"
  ]
}